<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:WorkingFilesList.Core.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="General.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:NumericUpDown}">
        <Setter Property="Height" Value="{StaticResource ToolbarControlHeight}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:NumericUpDown}">
                    <Grid DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}">
                        <Grid.Resources>
                            <Style TargetType="{x:Type Path}">
                                <Setter Property="Stretch" Value="Uniform" />
                                <Setter Property="Width" Value="6" />
                            </Style>
                        </Grid.Resources>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="16" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBox Grid.Column="0"
                                 Grid.RowSpan="2"
                                 Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                 VerticalContentAlignment="Center">
                        </TextBox>

                        <RepeatButton Command="{Binding IncrementValue}"
                                      CommandParameter="{Binding}"
                                      Grid.Column="1"
                                      Grid.Row="0">
                            <Path Data="M 0,1 L 2,1 L 1,0 Z" Fill="{TemplateBinding Foreground}"/>
                        </RepeatButton>

                        <RepeatButton Command="{Binding DecrementValue}"
                                      CommandParameter="{Binding}"
                                      Grid.Column="1"
                                      Grid.Row="1">
                            <Path Data="M 0,0 L 2,0 L 1,1 Z" Fill="{TemplateBinding Foreground}"/>
                        </RepeatButton>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
